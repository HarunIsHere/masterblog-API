{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": ["http"],
  "produces": ["application/json"],
  "consumes": ["application/json"],
  "tags": [
    { "name": "Post", "description": "Post API - CRUD + Search + Sorting" }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts (optional sorting)",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "enum": ["title", "content"],
            "required": false,
            "description": "Field to sort by"
          },
          {
            "name": "direction",
            "in": "query",
            "type": "string",
            "enum": ["asc", "desc"],
            "required": false,
            "description": "Sort direction"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Post" }
            }
          },
          "400": {
            "description": "Invalid sort or direction",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/PostInput" }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created",
            "schema": { "$ref": "#/definitions/Post" }
          },
          "400": {
            "description": "Missing required fields",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },

    "/api/posts/search": {
      "get": {
        "summary": "Search posts by title and/or content",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Search term for title (substring match)"
          },
          {
            "name": "content",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Search term for content (substring match)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation (may be empty list)",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Post" }
            }
          }
        }
      }
    },

    "/api/posts/{id}": {
      "delete": {
        "summary": "Delete a post by id",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true,
            "description": "Post id"
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted",
            "schema": { "$ref": "#/definitions/DeleteMessage" }
          },
          "404": {
            "description": "Post not found",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "put": {
        "summary": "Update a post by id (title/content optional)",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true,
            "description": "Post id"
          },
          {
            "name": "body",
            "in": "body",
            "required": false,
            "schema": { "$ref": "#/definitions/PostUpdate" }
          }
        ],
        "responses": {
          "200": {
            "description": "Post updated",
            "schema": { "$ref": "#/definitions/Post" }
          },
          "404": {
            "description": "Post not found",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    }
  },

  "definitions": {
    "Post": {
      "type": "object",
      "required": ["id", "title", "content"],
      "properties": {
        "id": { "type": "integer", "example": 1 },
        "title": { "type": "string", "example": "First post" },
        "content": { "type": "string", "example": "This is the first post." }
      }
    },
    "PostInput": {
      "type": "object",
      "required": ["title", "content"],
      "properties": {
        "title": { "type": "string", "example": "New post title" },
        "content": { "type": "string", "example": "New post content" }
      }
    },
    "PostUpdate": {
      "type": "object",
      "properties": {
        "title": { "type": "string", "example": "Updated title" },
        "content": { "type": "string", "example": "Updated content" }
      }
    },
    "DeleteMessage": {
      "type": "object",
      "properties": {
        "message": { "type": "string", "example": "Post with id 1 has been deleted successfully." }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "error": { "type": "string", "example": "Post not found" },
        "message": { "type": "string", "example": "No post with id 999 was found." },
        "missing": {
          "type": "array",
          "items": { "type": "string" },
          "example": ["title", "content"]
        }
      }
    }
  }
}